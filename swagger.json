{
    "swagger": "2.0",
    "info": {
        "title": "ParcelLab Documentation",
        "description": "This is basic api docs from doga budaks parcellab challenge",
        "version": "1.0"
    },
    "produces": ["application/json"],
    "paths": {
        "/weather": {
            "get": {
                "tags": [
                    "Gets Weather Details From coordinates and date time, weather details you get is on Celcius"
                ],
                "parameters": [
                    {
                        "name": "date",
                        "in": "query",
                        "required": true,
                        "description": "Example: 2020-04-24T12:00",
                        "type": "string"
                    },
                    {
                        "name": "lon",
                        "in": "query",
                        "required": true,
                        "type": "string",
                        "description": "Example longitude: 11.55"
                    },
                    {
                        "name": "lat",
                        "in": "query",
                        "type": "string",
                        "required": true,
                        "description": "Example latitude: 48.14"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK"
                    },
                    "400": {
                        "description": "Bad request. Latitude,longitude and date should be valid"
                    },
                    "500": {
                        "description": "Internal Server Error. There was an unexpected error"
                    }
                }
            }
        },
        "/track/{tracking_id}": {
            "get": {
                "description": "Returns the weather conditions on that given location ",
                "parameters": [
                    {
                        "name": "tracking_id",
                        "in": "path",
                        "required": true,
                        "description": "d991261c-1ad6-11ec-9216-002b67ce00far",
                        "type": "string"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK"
                    },
                    "404": {
                        "description": "Tracking id does not exist in db"
                    },
                    "500": {
                        "description": "Internal Server Error. There was an unexpected error"
                    }
                }
            }
        }
    }
}
